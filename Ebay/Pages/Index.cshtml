@page
@model Ebay.Pages.IndexModel
@{
    ViewData["Title"] = "TINY PLANTS";
    Layout = "_Layout";
}
<style>

    .category-item {
        display: flex;
        flex-direction: column;
    }

    .category-image {
        border-radius: 100%;
        width: 200px;
        height: 200px;
        padding: 25px;
        background-color: #e9e9e9;
    }

    .category-item img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

</style>

<div>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            @* <li data-target="#carouselExampleCaptions" data-slide-to="2" ></li> *@
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="/Shop">
                    <img src="~/images/banner-1.png" class=" w-100" style="border-radius: 25px" alt="...">
                </a>
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <a href="/Shop">
                    <img src="~/images/banner-2.png" class=" w-100" style="border-radius: 25px" alt="...">
                </a>
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            @*   <div class="carousel-item">
            <img src="~/images/banner-3.png" class="w-100 " alt="...">
            <div class="carousel-caption d-none d-md-block">

            </div>
            </div> *@

        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
    <div class="mt-4">
        <a href="/Shop">
            <img src="~/images/banner-6.png" class=" w-100" alt="...">
        </a>
    </div>
    @if (Model.Categories != null && Model.Categories.Count > 0)
    {
        <div class="categories my-5">

            <h4 class="mb-3" style="font-weight: 700; color: #191919">Explore Popular Categories</h4>
            <div class="category-list ">
                <div id="carousel-category" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Categories.Count; i += 5)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="d-flex" style="gap: 30px;">
                                    @for (int j = i; j < i + 5 && j < Model.Categories.Count; j++)
                                    {
                                        <a href="/Shop?categoryId=@Model.Categories[j].CategoryId" style="text-decoration: none;color: black;">
                                            <div class="category-item">
                                                <div class="category-image">
                                                    <img src="@Model.Categories[j].ImgUrl" alt="@Model.Categories[j].CategoryName" />
                                                </div>
                                                <h6 style="font-weight: 500;" class="text-center mt-1">@Model.Categories[j].CategoryName</h6>
                                            </div>
                                        </a>
                                    }
                                </div>

                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    }
    <div>
        <a href="/Shop">
            <img src="~/images/banner-4.png" class=" w-100" alt="...">
        </a>
    </div>

    <div class="mt-4">
        <a href="/Shop">
            <img src="~/images/banner-5.png" class=" w-100" alt="...">
        </a>
    </div>
</div>
