@page
@model Ebay.Pages.Checkout.HistoryModel
@{
    Layout = "_Layout";
}

<div class="mt-3">
    <h2 class="text-center">Order History</h2>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Order Id</th>
                        <th>Customer Name</th>
                        <th>Credit Card</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.FirstName</td>
                            <td>@order.CreditCard</td>
                            <td><a href="/Checkout/Receipt?orderId=@order.Id"  class="btn btn-primary">View Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No orders found.</p>
    }
</div>
