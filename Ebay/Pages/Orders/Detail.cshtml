@page "{id?}"
@model Ebay.Pages.Orders.DetailModel
@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <h1>Order Details</h1>
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Product.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Product.Sku)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Product.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItem.FirstOrDefault().Product.Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItem)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => orderItem.Product.Image)" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Product.Sku)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Product.Price)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => orderItem.Quantity)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => orderItem.Product.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>